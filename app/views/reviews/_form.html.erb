<div id="review-form-section" class="row">
  <section class="review-form col-lg-8 col-md-10 col-sm-12">
    <h4>Add your review</h4>
    <div class="well">
      <%= simple_form_for review,
                          url:  product_reviews_path(@product, review),
                          wrapper: :bootstrap3,
                          html: { role: 'form', id: 'review-form' } do |f| %>
        <%= f.input :headline, label: false, input_html: { class: 'form-control'} %>
        <%= f.input :content, label: false, input_html: { class: 'form-control'} %>
        <%= f.input :attachment, as: :file, label: false %>
        <%= f.input :product_id, as: :hidden, wrapper: false %>

        <%= f.button :submit, 'Submit Review', class: 'btn btn-success' %>
      <% end %>
    </div>
  </section>
</div>
