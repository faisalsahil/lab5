<div class="row">
  <h3 class="col-xs-12 shopping-bag">
    Shopping Bag
  </h3>
</div>

<div class="row">
  <div class="col-sm-12">
    <% if current_order.products.empty? %>
      <div class="cart-empty">
        <div class="well">
          <p>Your Cart is currently empty!</p>
          <br>
          <p><%= link_to 'Go shopping', root_url, :class=>'btn btn-success btn-lg' %></p>
        </div>
      </div>
    <% else %>
      <%= render 'cart_table' %>
    <% end %>
  </div>
</div>
