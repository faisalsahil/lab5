<div class="row">
  <section class="review-form col-lg-8 col-md-10 col-sm-12">
    <h4>Add your review</h4>
    <div class="well">
      <form role="form">
        <div class="form-group">
          <textarea name="review" id="review" rows="4" class="form-control" placeholder="Write your review..."></textarea>
        </div>
        <div class="form-group">
          <input type="password" class="form-control" id="review_headline" placeholder="Headline for review...">
        </div>
        <div class="form-group">
          <input type="file" id="exampleInputFile">
        </div>
        <button type="submit" class="btn btn-success">Submit Review</button>
      </form>
    </div>
  </section>
</div>
