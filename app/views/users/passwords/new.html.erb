<div class="authforms row" style="padding-top: 80px;">
  <%= simple_form_for(resource,
                      as:  resource_name,
                      url: password_path(resource_name),
                      wrapper: :bootstrap3,
                      html: { method: :post, class: 'bootstrap-center-form-medium' }) do |f| %>

    <div class="col-sm-8">
      <h3>Forgot your password?</h3>
      <div class="form-controls">
        <%= f.input :email, required: true, label: false, placeholder: 'Enter your Email address', input_html: { class: 'form-control' } %>
      </div>
      <div class="form-buttons">
        <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
