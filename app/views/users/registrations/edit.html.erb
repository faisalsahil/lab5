<div class="row" style="padding-top: 10px;">
  <%= simple_form_for(resource,
                      as:  resource_name,
                      url: profile_update_path,
                      wrapper: :bootstrap3,
                      html: { method: :put, class: 'bootstrap-center-form-medium' }) do |f| %>
    <div class="col-sm-8">
      <h3>Edit <%= resource_name.to_s.humanize %></h3>

      <div class="form-controls">
        <%= f.input :email,
          required: true,
          autofocus: true,
          input_html: { class: 'form-control' } %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :first_name, required: true, input_html: { class: 'form-control' } %>

        <%= f.input :last_name, required: true, input_html: { class: 'form-control' } %>

        <%= f.input :profile_image, as: :file %>

        <%= f.input :current_password,
          required: true,
          hint: "we need your current password to confirm your changes",
          input_html: { class: 'form-control' } %>
      </div>

      <div class="form-buttons">
        <%= f.button :submit, "Update", class: 'btn btn-primary' %> or <%= link_to 'cancel', root_url%>
      </div>
    </div>
  <% end %>
</div>
