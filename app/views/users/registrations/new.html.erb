<div class="row authforms">
  <%= simple_form_for(resource, as:  resource_name,
                                url: registration_path(resource_name),
                                wrapper: :bootstrap3,
                                html: { class: 'bootstrap-center-form-medium' }) do |f| %>
    <div class="col-sm-5 col-sm-offset-1 column-1">
      <h3>Sign up</h3>
      <div class="form-controls">
        <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' } %>
        <%= f.input :first_name, required: true, input_html: { class: 'form-control' } %>
        <%= f.input :last_name, required: true, input_html: { class: 'form-control' } %>
        <%= f.input :password, required: true, input_html: { class: 'form-control' } %>
        <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control' } %>
      </div>
      <div class="form-buttons">
        <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
      </div>
    </div>
    <div class='devise-links col-sm-5 desktop-text-center column-2-reg'>
      <%= render "users/shared/links" %>
    </div>
  <% end %>
</div>
